<%- include ../partials/header.ejs%>
<%- include ../partials/main_nav.ejs%>

<!-- ANSWER SURVEY PAGE -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Survey Participation</h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="topicTextField">Survey Topic : <%= SurveyList.topic %></label><br>
                    <label for="topicTextField">Author : <%= SurveyList.author%></label><br>
                    <label for="descriptionTextArea">Survey description :  <%= SurveyList.description %> </label><br>                 
                </div>

                <div class="form-group">    
                    <label for="answerTextField">Question 1 : <%= SurveyList.q1%></label><br>                
                    <input type="text" class="form-control" 
                    id="answerTextField" placeholder="Your Answer" 
                    name="a1" required>
                  
                </div>
                
                <div class="form-group">
                    <label for="answerTextField">Question 2 : <%= SurveyList.q2%></label><br>                
                    <input type="text" class="form-control" 
                    id="answerTextField" placeholder="Your Answer" 
                    name="a2" required>
                </div>
                <div class="form-group">
                    <label for="answerTextField">Question 3 : <%= SurveyList.q3%></label><br>                
                    <input type="text" class="form-control" 
                    id="answerTextField" placeholder="Your Answer" 
                    name="a3" required>
                </div>

             <div class ="participateAnswer">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit Answers</button>
                <a href="/survey-list/participate" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>    
                </div>
            </form>
        </div>
    </div>
</div>

