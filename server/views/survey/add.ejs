<%- include ../partials/main_nav.ejs%>


<!-- ADD SURVEY PAGE -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Create Survey</h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="topicTextField">Survey Topic</label>
                    <input type="text" class="form-control" 
                    id="topicTextField" placeholder="Enter your survey topic here" 
                    name="topic" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Survey description</label>
                    <textarea type="text" class="form-control" 
                    id="descriptionTextArea" placeholder="Enter a short description of your survey" 
                    name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="topicTextField">Author</label>
                    <input type="text" class="form-control" 
                    id="topicTextField" placeholder="Enter your name here" 
                    name="author" required>
                </div>
                <div class="form-group">
                    <label for="questionTextField">First question</label>
                    <input type="text" class="form-control" 
                    id="questionTextField" placeholder="Enter your question." 
                    name="question" required>
                </div>
                <div class="form-group">
                    <label for="questionTextField">Second question</label>
                    <input type="text" class="form-control" 
                    id="questionTextField" placeholder="Enter your question." 
                    name="question" required>
                </div>
                <div class="form-group">
                    <label for="questionTextField">Third question</label>
                    <input type="text" class="form-control" 
                    id="questionTextField" placeholder="Enter your question." 
                    name="question" required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                <a href="/survey-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>    
            </form>
        </div>
    </div>
</div>

